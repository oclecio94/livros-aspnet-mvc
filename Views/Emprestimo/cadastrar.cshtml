@model EmprestimosModel
@{
    ViewData["Title"] = "Cadastrar Empréstimo";
}

<div class="container bg-dark p-5 rounded-5">
  <div class="mb-5 text-center">
    <h1 class="text-light">Cadastro Empréstimos</h1>

  </div>

 <form method="post" asp-controller="Emprestimo" asp-action="Cadastrar">
  <div class="mb-3">
    <label for="Recebedor" class="form-label text-light">Recebedor:</label>
    <input asp-for="Recebedor" type="text" class="form-control text-light" id="Recebedor" placeholder="Quem está recebendo o livro?">
    <span class="text-danger" asp-validation-for="Recebedor"></span>
  </div>
  <div class="mb-3">
    <label for="Fornecedor" class="form-label text-light">Fornecedor:</label>
    <input asp-for="Fornecedor" type="text" class="form-control text-light" id="Fornecedor" placeholder="Quem está emprestando o livro?">
    <span class="text-danger" asp-validation-for="Fornecedor"></span>
  </div>
 <div class="mb-3">
    <label for="Livro" class="form-label text-light">Livro:</label>
    <input asp-for="LivroEmprestado" type="text" class="form-control text-light" id="Livro" placeholder="Qual é o livro que está sendo emprestado?">
    <span class="text-danger" asp-validation-for="LivroEmprestado"></span>
  </div>
  <div class="d-flex gap-5 mt-5">
    <button type="submit" class="btn btn-success w-50">Adicionar</button>
    <a asp-controller="Emprestimo" asp-action="Index" class="btn btn-primary w-50">Voltar</a>
  </div>
 </form>

</div>